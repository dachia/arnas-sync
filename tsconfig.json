{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  },
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2020",
    "module": "CommonJS",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "checkJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}